<h1>Lessons</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.id %></td>
        <td><%= link_to lesson.name, lesson_path(lesson) %></td>
        <td><%= lesson.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_lesson_path(lesson), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', lesson_path(lesson), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_lesson_path, :class => 'btn btn-primary' %>
